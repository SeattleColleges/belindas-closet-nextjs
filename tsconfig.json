{
  "compilerOptions": {
    "target": "ES2015",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"],                // Ensures @/ resolves to project root
      "@/components/*": ["components/*"] // Maps @/components to ./components
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build/types/**/*.ts",
    "jest.setup.ts" 
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
